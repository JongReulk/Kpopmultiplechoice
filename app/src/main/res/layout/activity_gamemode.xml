<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_gradient">


    <!-- 모니터 이미지 -->
    <ImageView
        android:id="@+id/Image_TV_mode"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/tvframefullfinal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.20"
        app:layout_constraintHeight_percent="0.44"
        app:layout_constraintWidth_percent="1"
        />



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_modeTip"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@+id/Image_TV_mode"
        app:layout_constraintBottom_toBottomOf="@+id/Image_TV_mode"
        app:layout_constraintLeft_toLeftOf="@+id/Image_TV_mode"
        app:layout_constraintRight_toRightOf="@+id/Image_TV_mode"
        >



        <com.tenriver.kpopmultiplechoice.OutlineTextView
            android:id="@+id/txtTitle1"
            android:text="K"
            android:fontFamily="@font/font_basicbold"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="@color/title_text_color"

            android:gravity="center"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="28sp"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeStepGranularity="2sp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.05"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintWidth_percent="0.15"
            app:layout_constraintHorizontal_bias="0.25"

            app:textStroke="true"
            app:textStrokeWidth="8.0"
            app:textStrokeColor="@color/white"/>

        <com.tenriver.kpopmultiplechoice.OutlineTextView
            android:id="@+id/txtTitle2"
            android:text="P"
            android:fontFamily="@font/font_basicbold"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="@color/title_text_color"


            android:gravity="center"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="28sp"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeStepGranularity="2sp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.05"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintWidth_percent="0.15"
            app:layout_constraintHorizontal_bias="0.42"

            app:textStroke="true"
            app:textStrokeWidth="8.0"
            app:textStrokeColor="@color/white"/>


        <ImageView
            android:id="@+id/imageView_lp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/musiclp"


            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintVertical_bias="0.05"
            app:layout_constraintHorizontal_bias="0.59"

            />

        <com.tenriver.kpopmultiplechoice.OutlineTextView
            android:id="@+id/txtTitle3"
            android:text="P"
            android:fontFamily="@font/font_basicbold"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="@color/title_text_color"

            android:gravity="center"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="28sp"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeStepGranularity="2sp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.05"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintWidth_percent="0.15"
            app:layout_constraintHorizontal_bias="0.76"

            app:textStroke="true"
            app:textStrokeWidth="8.0"
            app:textStrokeColor="@color/white"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.tenriver.kpopmultiplechoice.OutlineTextView
        android:id="@+id/mode_Title"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:gravity="center"
        android:text="@string/mode"
        android:fontFamily="@font/font_basicbold"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="24sp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeStepGranularity="2sp"

        android:textColor="@color/white"
        app:layout_constraintVertical_bias="0.28"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintWidth_percent="0.5"

        app:layout_constraintTop_toTopOf="@id/Image_TV_mode"
        app:layout_constraintLeft_toLeftOf="@id/Image_TV_mode"
        app:layout_constraintRight_toRightOf="@id/Image_TV_mode"
        app:layout_constraintBottom_toBottomOf="@id/Image_TV_mode"

        app:textStroke="true"
        app:textStrokeWidth="10.0"
        app:textStrokeColor="@color/title_text_color"/>

    <LinearLayout
        android:id="@+id/beginner_linear"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="3"

        app:layout_constraintBottom_toBottomOf="@+id/Image_TV_mode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mode_Title">

        <com.tenriver.kpopmultiplechoice.OutlineTextView
            android:id="@+id/txt_beginnermode"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:bufferType="spannable"
            android:fontFamily="@font/font_digital"
            android:gravity="center"
            android:text="Beginner"
            android:textColor="@color/beige"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"

            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="22sp"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeStepGranularity="2sp"
            android:textStyle="bold"

            app:textStroke="true"
            app:textStrokeColor="@color/basic_color2"
            app:textStrokeWidth="6.0" />

        <com.tenriver.kpopmultiplechoice.OutlineTextView
            android:id="@+id/txt_beginnermode2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:bufferType="spannable"
            android:fontFamily="@font/font_basic"
            android:gravity="center"
            android:text="@string/beginnermodedescription"
            android:textColor="@color/white"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"

            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="15sp"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeStepGranularity="2sp"
            android:textStyle="bold"

            app:textStroke="true"
            app:textStrokeColor="@color/title_text_color"
            app:textStrokeWidth="3.0" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/basic_linear"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="3"

        app:layout_constraintBottom_toBottomOf="@+id/Image_TV_mode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mode_Title">

        <com.tenriver.kpopmultiplechoice.OutlineTextView
            android:id="@+id/txt_basicmode"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:bufferType="spannable"
            android:fontFamily="@font/font_digital"
            android:layout_weight="2"
            android:gravity="center"
            android:text="BASIC"
            android:textColor="@color/basic_color1"

            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"

            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="22sp"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeStepGranularity="2sp"
            android:textStyle="bold"

            app:textStroke="true"
            app:textStrokeColor="@color/basic_color2"
            app:textStrokeWidth="6.0" />

        <com.tenriver.kpopmultiplechoice.OutlineTextView
            android:id="@+id/txt_basicmode2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:bufferType="spannable"
            android:fontFamily="@font/font_basic"
            android:gravity="center"
            android:text="@string/basicmodedescription"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"

            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="15sp"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeStepGranularity="2sp"
            android:textStyle="bold"

            app:textStroke="true"
            app:textStrokeColor="@color/title_text_color"
            app:textStrokeWidth="3.0" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/challenge_linear"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="3"

        app:layout_constraintBottom_toBottomOf="@+id/Image_TV_mode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mode_Title">

        <com.tenriver.kpopmultiplechoice.OutlineTextView
            android:id="@+id/txt_challengemode"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:bufferType="spannable"
            android:fontFamily="@font/font_digital"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:text="100\nChallenges"
            android:textColor="@color/challenge_color1"


            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="20sp"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeStepGranularity="2sp"

            android:textStyle="bold"

            app:textStroke="true"
            app:textStrokeColor="@color/challenge_color2"
            app:textStrokeWidth="6.0" />

        <com.tenriver.kpopmultiplechoice.OutlineTextView
            android:id="@+id/txt_challengemode2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:bufferType="spannable"
            android:layout_weight="1"
            android:fontFamily="@font/font_basic"
            android:gravity="center"
            android:text="@string/challengemodedescription"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"

            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="20sp"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeStepGranularity="2sp"
            android:textStyle="bold"

            app:textStroke="true"
            app:textStrokeColor="@color/title_text_color"
            app:textStrokeWidth="3.0" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/consonants_linear"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="3"

        app:layout_constraintBottom_toBottomOf="@+id/Image_TV_mode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mode_Title">

        <com.tenriver.kpopmultiplechoice.OutlineTextView
            android:id="@+id/txt_consonantsmode"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:bufferType="spannable"
            android:fontFamily="@font/font_digital"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="@string/consonantquiz"
            android:textColor="@color/consonants_color1"


            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="20sp"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeStepGranularity="2sp"

            android:textStyle="bold"

            app:textStroke="true"
            app:textStrokeColor="@color/consonants_color2"
            app:textStrokeWidth="6.0" />

        <com.tenriver.kpopmultiplechoice.OutlineTextView
            android:id="@+id/txt_consonantsmode2"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:bufferType="spannable"
            android:layout_weight="1"
            android:fontFamily="@font/font_basic"
            android:gravity="center"
            android:text="@string/consonant_description"
            android:textColor="@color/white"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"

            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="15sp"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeStepGranularity="2sp"
            android:textStyle="bold"

            app:textStroke="true"
            app:textStrokeColor="@color/title_text_color"
            app:textStrokeWidth="3.0" />
    </LinearLayout>

    <!-- 배경 이미지 -->
    <ImageView
        android:id="@+id/bookcase"
        android:src="@drawable/bookcase2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHeight_percent="0.42"
        app:layout_constraintWidth_percent="0.85"
        />

    <!-- 리모컨 이미지 -->
    <ImageView
        android:id="@+id/Remote_mode"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/remotecontrol"
        android:scaleType="fitXY"

        app:layout_constraintTop_toBottomOf="@id/Image_TV_mode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHeight_percent="0.38"
        app:layout_constraintWidth_percent="0.45"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Remote_button_mode"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@+id/Remote_mode"
        app:layout_constraintBottom_toBottomOf="@+id/Remote_mode"
        app:layout_constraintLeft_toLeftOf="@+id/Remote_mode"
        app:layout_constraintRight_toRightOf="@+id/Remote_mode"
        >

        <ImageButton
            android:id="@+id/mode_up"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"

            android:soundEffectsEnabled="false"

            android:src="@drawable/uparrow"
            android:text="up"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/mode_confirm"
            app:layout_constraintVertical_bias="1"
            >

        </ImageButton>

        <Button
            android:id="@+id/mode_confirm"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/btn_remote_circle"
            android:soundEffectsEnabled="false"

            android:text="OK"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/font_basic"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.5"

            >
        </Button>

        <ImageButton
            android:id="@+id/mode_down"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"

            android:background="@android:color/transparent"
            android:src="@drawable/downarrow"
            app:layout_constraintTop_toBottomOf="@id/mode_confirm"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0"
            >
        </ImageButton>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/mode_adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-3940256099942544/6300978111"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        />

    <ImageView
        android:id="@+id/upPink"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/uparrowpink"

        app:layout_constraintTop_toBottomOf="@id/mode_Title"
        app:layout_constraintLeft_toLeftOf="@id/mode_Title"
        app:layout_constraintRight_toRightOf="@id/mode_Title"


        />

    <ImageView
        android:id="@+id/downPink"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/downarrowpink"
        android:layout_marginBottom="5dp"
        app:layout_constraintLeft_toLeftOf="@id/Image_TV_mode"
        app:layout_constraintRight_toRightOf="@id/Image_TV_mode"
        app:layout_constraintBottom_toBottomOf="@id/Image_TV_mode"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
