<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_color">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/waring_pink"
        tools:layout_editor_absoluteY="25dp"
        android:alpha="0.9"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"/>

    <com.tenriver.kpopmultiplechoice.OutlineTextView
        android:id="@+id/warning1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:fontFamily="@font/font_digital"
        android:gravity="center"
        android:text="@string/warning_smoothinternet"
        android:textColor="@color/palepink2"
        android:textSize="28dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"

        app:textStroke="true"
        app:textStrokeColor="@color/palewhite"
        app:textStrokeWidth="1.5" />

    <com.tenriver.kpopmultiplechoice.OutlineTextView
        android:id="@+id/warning2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:fontFamily="@font/font_digital"
        android:gravity="center"
        android:text="@string/warning_wifi"
        android:textColor="@color/palepink2"
        android:textSize="28dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/warning1"
        app:layout_constraintVertical_bias="0.15"

        app:textStroke="true"
        app:textStrokeColor="@color/palewhite"
        app:textStrokeWidth="1.5" />

    <com.tenriver.kpopmultiplechoice.OutlineTextView
        android:id="@+id/warning3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:fontFamily="@font/font_digital"
        android:gravity="center"
        android:text="@string/warning_earphones"
        android:textColor="@color/palepink2"
        android:textSize="28dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/warning2"
        app:layout_constraintVertical_bias="0.2"

        app:textStroke="true"
        app:textStrokeColor="@color/palewhite"
        app:textStrokeWidth="1.5" />



</androidx.constraintlayout.widget.ConstraintLayout>