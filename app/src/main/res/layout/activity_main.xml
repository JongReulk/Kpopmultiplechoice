        app:layout_constraintBottom_toBottomOf="@+id/Image_TV_main"
        app:layout_constraintLeft_toLeftOf="@+id/Image_TV_main"
        app:layout_constraintRight_toRightOf="@+id/Image_TV_main">



        <com.tenriver.kpopmultiplechoice.OutlineTextView
            android:id="@+id/txtTitle1"
            android:text="K"
            android:fontFamily="@font/font_basicbold"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="@color/title_text_color"

            android:gravity="center"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="28sp"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeStepGranularity="2sp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.18"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintHorizontal_bias="0.2"

            app:textStroke="true"
            app:textStrokeWidth="8.0"
            app:textStrokeColor="@color/white"/>

        <com.tenriver.kpopmultiplechoice.OutlineTextView
            android:id="@+id/txtTitle2"
