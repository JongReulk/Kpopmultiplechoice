        <com.tenriver.kpopmultiplechoice.OutlineTextView
            android:id="@+id/txtMvQuiz"
            android:text="@string/MvQuiz"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:bufferType="spannable"
            android:fontFamily="@font/font_basic"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="24sp"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeStepGranularity="2sp"

            app:layout_constraintTop_toBottomOf="@id/txtTitle1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintWidth_percent="1"

            app:textStroke="true"
            app:textStrokeWidth="10.0"
            app:textStrokeColor="@color/title_text_color"/>

